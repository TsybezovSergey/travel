<link rel='stylesheet' href='/css/profile.css'>
<script defer src="/js/profile.js"></script>
<script defer src="/js/upload.js"></script>
  <div class="profile-container">
    <div>
    <h1>Форма редактирования профиля:</h1>
      <form class='input-form-reg' method='post' action="/profile">
        <label>Ваше имя:</label>
        <input type='text' class='input-form' placeholder="Ваше имя" name='name' required value={{userBD.name}}>
        <label>Ваша фамилия:</label>
        <input type='text' class='input-form' placeholder="Ваша фамилия" name='firstname' required value={{userBD.firstname}}>
        <label>Ваша электронная почта:</label>
        <input type='text' class='input-form' placeholder="Ваша электронная почта" name='email' required value={{userBD.email}}>
        <label>{{message}}</label>
        <label>Ваш номер телефона:</label>
        <input type='номер телефона' class='input-form' placeholder="Ваш номер телефона" name='phone' minlength=5 required value="{{userBD.phone}}">
        <label>Ваш пароль:</label>
        <input type='password' class='input-form' placeholder="Ваш пароль" name='password' minlength=5 required>
        <span>Хотите сохранить изменения?</span>
        <div class='btn-wrap'>
          <button class="btn" type="submit">Cохранить</button>
        </div>
        <div class='btn-wrap'>
        </div>
      </form>
      </div>
      
      {{#if userBD.url}}
      <div class="block" id={{userBD._id}}>
          <img src='{{userBD.url}}'></img>
          <button class="btn-small btn-abs" id="removePhoto"></button>
          <h3 id='submessagePhoto btn-abs'></h3>
        </div>
        
      </div>
      {{else}}
        <div class="block" id={{userBD._id}}>
          <input type='file' class="hidden" id="input-file">
          <button class="btn" id="upload">Загрузить фото</button>
        </div>
      {{/if}}

