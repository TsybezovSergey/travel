            <input type='email' class='input-form' placeholder="Ваша электронная почта" name="email" required/>
            <input type='phone' class='input-form' placeholder="Ваш номер телефона" name="phone" required minlength=7/>
            <input type='password' class='input-form' placeholder="Ваш пароль" name='password' minlength=5 required/>
            <div class='btn-wrap2'>
              <button class="btn" id="registrGo">Зарегистрироваться</button>
            </div>
          </form>
        </div>
