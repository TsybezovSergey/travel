<div class="hystmodal hide" id="myModal">
    <div class="modal-wrap">
        <div class="modal-window" role="dialog" aria-modal="true" >
          <form class='input-form-reg' method='post' action="/login">
            <button class='btn-small' id="closeModal"></button>
            <h4>Введите почту и пароль:</h4>
            <input type='text' class='input-form' placeholder="Вашa электронная почта" name='email' required/>
            <input type='password' class='input-form' placeholder="Ваш пароль" name='password' minlength=5 required/>
            <span>нет аккаунта?</span>
            <div class='btn-wrap'>
              <a class="btn" id="registr"> Зарегистрироваться</a>
              <button class="btn" type="submit">войти</button> 
            </div>
          </form>
        </div>
    </div>
</div>
<div class="hystmodal hide2" id="myModal2">
    <div class="modal-wrap">
        <div class="modal-window" role="dialog" aria-modal="true" >
          <form class='input-form-reg'  method='post' action="/registration">
            <button class='btn-small' id="closeModal2"></button>
            <h4> Форма регистрации:</h4>
            <input type='text' class='input-form' placeholder="Ваше имя" name="name" required minlength=2/>
