<div class="wrapper">
  <form class='input-form-reg' method='post' action="/users/review">
          <input type='text' style="display: none" name='id' value="{{user._id}}">
        <label>Отзыв:</label>
        <textarea type='text' class="input-area" name='review' required minlength=12></textarea>
        <br></br>
        <label>Ваш пароль:</label>
        <input type='password' class='input-form' placeholder="Ваш пароль" name='password' minlength=6 required/>
        <label>{{message}}</label>
        <span>Оставить отзыв?</span>
        <div class='btn-wrap'>
          <button class="btn" type="submit">Cохранить</button>
        </div>
        <div class='btn-wrap'>
        </div>
      </form>
</div>
